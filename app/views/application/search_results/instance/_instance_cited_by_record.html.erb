<tr id="search-result-<%= search_result.id %>"
    class="search-result instance-cited-by-record <%= 'fresh' if search_result.fresh? %>"
    data-get-url="<%= instance_path(search_result.id) %>"
    data-edit-url="<%= instance_path(search_result.id) %>"
    data-base-url="<%= instance_path(search_result.id) %>"
    data-tab-url="<%= instance_tab_path(id: search_result.id, tab: 'active_tab_goes_here') %>"
    data-record-id="<%= search_result.id %>"
    data-record-type="instance"
    data-instance-type="<%= search_result.type %>"
    data-row-type="instance_cited_by_record"
    tabindex="<%= increment_tab_index(100) %>"
>
  <td class="for-indent width-1-percent">x</td>
  </div>
  <td class="nsl-tiny-icon-container width-1-percent"><%= record_icon('instance') %></td>
  <td colspan="1" class="text takes-focus width-8-percent">
    &nbsp;
  </td>
  <td colspan="2" class="text main-content takes-focus width-80-percent indent-level-1">
    <a
    class="main-content show-details-link indent-level-1 <%= "draft" if search_result.draft? %>"
    tabindex="<%= increment_tab_index %>"
    id="<%= %Q(#{search_result.class}-#{search_result.id}) %>">
      <%= "#{search_result.expanded_instance_type || search_result.instance_type.name}: <b>#{search_result.name.full_name}</b>".html_safe %>
      <%= "[#{search_result.name.name_status.name}]" unless search_result.name.name_status.blank? %>
      <%= "#{search_result.page}" %>
      <%= render(partial: 'draft', locals: { search_result: search_result }) %>

    </a>
    <%= "</td><td>[#{search_result.type}]::#{ search_result.try('display_as') || search_result.class.to_s};#{search_result.id }(by)- #{Pathname.new(__FILE__).basename}".html_safe if @debug %>
  </td>
  <td class="takes-focus width-10-percent filler">&nbsp;</td>
</tr>
